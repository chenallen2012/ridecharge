<h1>All Rides</h1>
 
<table>
  <tr>
    <th>Ride Date</th>
    <th>Number of Riders</th>
    <th>Rider Names</th>
    <th>Total Ride Price</th>
    <th>Payment Complete?</th>
  </tr>
 
  <% @rides.each do |ride| %>
    <tr>
      <td><%= ride.date %></td>
      <td><%= ride.rider_count %></td>
      <td><%= ride.rider_names %></td>
      <td><%= ride.price %></td>
      <td><%= ride.ride_complete %></td>
      <td><%= link_to 'View Ride', ride_path(ride) %></td>
    </tr>
  <% end %>
</table>


