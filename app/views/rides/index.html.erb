<%= stylesheet_link_tag "application" %>
<body>
	<div id="navbar">
		<div id="navtitle">RIDECHARGE</div>
	</div>


	<h1>All RideCharges</h1>
	 
	<table>
	  <tr>
	    <th>Ride Date</th>
	    <th>Number of Riders</th>
	    <th>Rider Names</th>
	    <th>Total Ride Price</th>
	    <th>Payment Complete?</th>
	  </tr>
	 
	  <% @rides.each do |ride| %>
	    <tr>
	      <td><%= ride.date %></td>
	      <td><%= ride.rider_count %></td>
	      <td><%= ride.rider_names %></td>
	      <td><%= ride.price %></td>
	      <td><%= ride.ride_complete %></td>
	      <td><%= link_to 'View Ride', ride_path(ride) %> | </td>
	      <td><%= link_to 'Edit RideCharge', edit_ride_path(ride) %> | </td>
	      <td><%= link_to 'Delete RideCharge', ride_path(ride), method: :delete, data: {confirm: 'Are you sure?'} %></td>
	    </tr>
	  <% end %>
	</table>
</body>

<%= link_to 'Add New RideCharge', new_ride_path %>